{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0.35",
  "default_locale": "ja",
  "description": "__MSG_extDescription__",
  "permissions": ["storage"],
  "options_page": "options/options.html",
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["loader.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "content_script.js",
        "lib/logger.js",
        "lib/sanitizer.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
